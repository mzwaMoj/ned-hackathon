# Text2SQL API Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Configuration
APP_NAME=Text2SQL API
APP_VERSION=1.0.0
DEBUG=true

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name_here
AZURE_OPENAI_VERSION=2024-02-15-preview

# Azure OpenAI Embedding Configuration (Required for vector search)
AZURE_OPENAI_EMBEDDING_ENDPOINT=your_azure_embedding_endpoint_here
AZURE_OPENAI_EMBEDDING_KEY=your_azure_embedding_key_here
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=your_embedding_deployment_name_here
AZURE_OPENAI_EMBEDDING_API_VERSION=2024-02-01

# Database Configuration

# DB_USERNAME=your_username_here  # Only needed for SQL authentication
# DB_PASSWORD=your_password_here  # Only needed for SQL authentication
# Standard naming convention (used by Settings class)
DB_SERVER = "localhost,1433"
DB_DATABASE = master 
DB_AUTH_TYPE = sql
DB_USERNAME = SA
DB_PASSWORD = 1Mzw@moj4rmsbg

# Vector Database Configuration
VECTOR_DB_PATH=./index/chroma_db

# API Configuration
CORS_ORIGINS=["*"]
API_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# MLflow Configuration (Set to false to disable MLflow entirely)

# MLFLOW_TRACKING_URI=your_mlflow_uri_here
MLFLOW_EXPERIMENT_NAME=text2sql_experiment
# Feature Flags
ENABLE_MLFLOW=true
ENABLE_CHAT=true
ENABLE_CHARTS=true


# Server Configuration
HOST = 127.0.0.1
PORT = 8000
WORKERS = 1


# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s


